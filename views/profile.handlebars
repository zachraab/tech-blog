<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Write a New Blog Post:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">post name:</label>
        <input
          placeholder="Tip: Something that will grab a reader's attention!"
          class="form-input"
          type="text"
          id="project-name"
          name="project-name"
        />
      </div>
      <div class="form-group">
        <label for="project-desc">post content:</label>
        <textarea
          placeholder="Tip: Be sure to include resources at the end of your post!"
          class="form-input"
          id="project-desc"
          name="project-desc"
        ></textarea>
      </div>
      <div class="form-group">
        <label for="project-name">emoji:</label>
        <input
          placeholder="Tip: Press the windows key (⊞) + period (.) to select an emoji "
          class="form-input"
          type="text"
          id="post-emoji"
          name="project-name"
        />
      </div>
      <div class="form-group">
        <label for="project-name">image:</label>
        <input
          placeholder="URL of image that you would like to include"
          class="form-input"
          type="text"
          id="post-image"
          name="project-name"
        />
      </div>
      <div class="form-group">
        <label for="project-name">allow comments?</label>
        <input
          placeholder="Tip: Press the windows key (⊞) + period (.) to select an emoji "
          class="form-input"
          type="checkbox"
          id="post-allow-comments"
          name="project-name"
        />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
    <div class="col-md-6 project-list">
      <h3>Current Posts:</h3>

      {{#each posts as |post|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/posts/{{id}}">{{title}}</a></h4>
          </div>
          <div class="col-md-4">
            <button
              class="btn btn-sm btn-danger"
              data-id="{{id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="/js/profile.js"></script>