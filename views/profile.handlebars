  </div>

  {{#if posts.length}}
    <div class="col-md-6 project-list">
      <h3>Current Posts:</h3>

      {{#each posts as |post|}}
        <div class="row justify-space-between mb-2">
          <div class="col-md-5">
            <h4>{{#if emoji}}{{emoji}}{{/if}}<a
                href="/posts/{{id}}"
              >{{title}}</a></h4>

          </div>
          {{#if image}}
            <div class="col-md-2">
              <img
                id="blog-image"
                style="height:50px;"
                src="{{image}}"
                alt="Blog Post Image"
              />
            </div>
          {{/if}}
          <div class="col-md-2">
            <button
              class="btn btn-sm btn-danger"
              data-id="{{id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

