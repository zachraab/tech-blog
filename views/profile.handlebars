<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
    <button
      class="btn btn-sm btn-danger"
      id="delete-user-btn"
      data-id="{{id}}"
    >DELETE USER PROFILE</button>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Write a New Blog Post:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">post name:</label>
        <input
          placeholder="Tip: Something that will grab a reader's attention!"
          class="form-input"
          type="text"
          id="project-name"
          name="project-name"
        />
      </div>
      <div class="form-group">
        <label for="project-desc">post content:</label>
        <textarea
          placeholder="Tip: Be sure to include resources at the end of your post!"
          class="form-input"
          id="project-desc"
          name="project-desc"
        ></textarea>
      </div>
      <div class="form-group">
        <label for="post-emoji">select an emoji:</label>
        <select
          name="post-emoji"
          class="m-4 p-2 bg-primary text-light"
          style="width:100px; border-radius:10px;"
          id="post-emoji"
        >
          <option value="">none</option>
          <option value="&#128507;">&#128507;</option>
          <option value="&#9749;">&#9749;</option>
          <option value="&#9203;">&#9203;</option>
          <option value="🎨">🎨</option>
          <option value="💎">💎</option>
          <option value="❤">❤</option>
          <option value="🎵">🎵</option>
          <option value="🧬">🧬</option>
          <option value="🧰">🧰</option>
          <option value="⚔">⚔</option>
          <option value="✏">✏</option>
          <option value="🐛">🐛</option>
          <option value="🐳">🐳</option>
          <option value="🍔">🍔</option>
          <option value="🍜">🍜</option>
          <option value="🧁">🧁</option>
          <option value="🍉">🍉</option>
          <option value="🌳">🌳</option>
          <option value="🌻">🌻</option>
          <option value="🚗">🚗</option>
          <option value="✈">✈</option>
          <option value="🛸">🛸</option>
          <option value="🌎">🌎</option>
          <option value="🏕">🏕</option>
          <option value="🌈">🌈</option>
          <option value="🌠">🌠</option>
          <option value="🌞">🌞</option>
          <option value="🌊">🌊</option>
          <option value="🔥">🔥</option>
          <option value="⛄">⛄</option>

        </select>
      </div>
      <div class="form-group">
        <label for="post-image">image:</label>
        <input
          placeholder="Enter the URL of an image that you would like to include"
          class="form-input"
          type="text"
          id="post-image"
          name="post-image"
        />
      </div>
      <div class="form-group">
        <label for="post-allow-comments">allow comments?</label>
        <input
          class="form-input"
          type="checkbox"
          id="post-allow-comments"
          name="post-allow-comments"
        />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
    <div class="col-md-6 project-list">
      <h3>Current Posts:</h3>

      {{#each posts as |post|}}
        <div class="row justify-space-between mb-2">
          <div class="col-md-5">
            <h4>{{#if emoji}}{{emoji}}{{/if}}<a
                href="/posts/{{id}}"
              >{{title}}</a></h4>

          </div>
          {{#if image}}
            <div class="col-md-2">
              <img
                id="blog-image"
                style="height:50px;"
                src="{{image}}"
                alt="Blog Post Image"
              />
            </div>
          {{/if}}
          <div class="col-md-2">
            <button
              class="btn btn-sm btn-danger"
              data-id="{{id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="/js/profile.js"></script>