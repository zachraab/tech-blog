<div class="text-center" id="post-container" data-id="{{id}}">
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>
<div class="row">
<div class="col-md-6">
  <h4>Leave a Comment:</h2>

  <form class="form" id="new-comment-form" data-id={{id}}>
    <div class="form-group">
      <label for="comment-name">name:</label>
      <input value="{{userName}}" class="form-input" type="text" id="comment-name" readonly/>
    </div>
    <div class="form-group">
      <label for="comment-message">message:</label>
      <input class="form-input" type="text" id="comment-message" />
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">send</button>
    </div>
  </form>
</div>
<div class="col-md-6">
  {{#if comment}}
    <div class="comment-list">
      <h4>Current Comments:</h4>

      {{#each comment as |item|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <p class="mt-4">{{comment}} -{{name}}</p>
          </div>
          <div class="mt-4 col-md-4">
            <button
              class="btn btn-sm btn-danger"
              data-id="{{id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>
</div>
<script src="/js/post.js"></script>