<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p id="id">{{id}}</p>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>
<div class="row">
<div class="col-md-6">
  <h4>Leave a Comment:</h2>

  <form class="form new-comment-form">
    <div class="form-group">
      <label for="comment-name">name:</label>
      <input class="form-input" type="text" id="comment-name" />
    </div>
    <div class="form-group">
      <label for="comment-message">message:</label>
      <input class="form-input" type="text" id="comment-message" />
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">send</button>
    </div>
  </form>
</div>
<div class="col-md-6">
  {{#if comment}}
    <div class="col-md-6 comment-list">
      <h3>Current Comments:</h3>

      {{#each comment as |comment|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4>{{comment}}</a></h4>
          </div>
          <div class="col-md-4">
            <button
              class="btn btn-sm btn-danger"
              data-id="{{id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>
</div>
<script src="./js/profile.js"></script>